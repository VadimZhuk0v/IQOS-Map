<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <gradient android:startColor="@color/category_base_top"
                android:angle="-90"
                android:endColor="@color/category_base_bottom"/>

        </shape>
    </item>

    <item>
        <shape
            android:innerRadius="@dimen/ic_cluster_inner_radius"
            android:shape="ring"
            android:thickness="@dimen/ic_cluster_thickness"
            android:useLevel="false">
            <solid android:color="@color/white"/>
            <size
                android:width="@dimen/ic_cluster_size"
                android:height="@dimen/ic_cluster_size" />
        </shape>
    </item>
</layer-list>
