<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holder">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress"
        style="@style/LottieAnimationProgress"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_placeholder_view_ll_error_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/layout_placeholder_view_iv_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/layout_placeholder_view_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_placeholder_view_tv_error_horizontal_margin"
            android:layout_marginStart="@dimen/layout_placeholder_view_tv_error_horizontal_margin"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/layout_placeholder_view_tv_error_text_size" />

        <TextView
            android:id="@+id/layout_placeholder_view_tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_placeholder_view_tv_error_horizontal_margin"
            android:layout_marginStart="@dimen/layout_placeholder_view_tv_error_horizontal_margin"
            android:layout_marginTop="@dimen/margin"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@string/repeat"
            android:textColor="?colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>